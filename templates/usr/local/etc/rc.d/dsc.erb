. /etc/rc.subr
name=dsc
rcvar=dsc_enable
load_rc_config "$name"

: ${dsc_enable="NO"}

command="/usr/local/bin/dsc"
command_args="-p <%= @conf_file %>"

pidfile=<%= @pid_file %>
start_precmd="install -d -o root -g wheel ${pidfile%/*}"

run_rc_command "$1"
